{
  "family": "ecs-img-stack-task-definition",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::448049788660:role/ecs-img-stack-ECSTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::448049788660:role/ecs-img-stack-ecs-task-role",
  "containerDefinitions": [
    {
      "name": "ecs-img-stack-container",
      "image": "<ECR_REPOSITORY_URI>:latest",
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/ecs-stack-log-group",
          "awslogs-region": "eu-central-1",
          "awslogs-stream-prefix": "ecs-img-stack-container-log"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:80/ || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 120
      },
      "secrets": [
        {
          "name": "DB_USERNAME",
          "valueFrom": "arn:aws:ssm:eu-central-1:448049788660:parameter/ecs-stack/rds/postgres/username"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:ssm:eu-central-1:448049788660:parameter/ecs-stack/rds/postgres/password"
        }
      ],
      "environment": [
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_HOST",
          "value": "<RDS_ENDPOINT>"
        },
        {
          "name": "DB_NAME",
          "value": "<DB_NAME>"
        }
      ]
    }
  ]
}
